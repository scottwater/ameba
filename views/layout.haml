!!! Strict
%html{:lang => "en"}
  %head
    %title= h @title
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible",  :content => "IE=edge,chrome=1"}
    %meta{:name => 'robots', :content => @robots}
    %meta{:name => 'google-site-verification', :content => 'cp4DJ22wBHgD7CU8Q8Qt6RzE-RBvt_Bs3P36V5sFVgI'}
    %link{:rel => "stylesheet", :href => "/css/style.css", :media => "screen, projection"}
    %link{:rel => "stylesheet", :href => "/css/syntax.css", :media => "screen, projection"}
    %link{:href => "#{@site.feed ? @site.feed : url_for(:atom)}",
      :type => "application/atom+xml", :rel => "alternate",
      :title => "#{@site.title}"}
    %link{:rel => "shortcut icon", :href=>"/favicon.ico"}
    /[if IE]
      %script{:type => "text/javascript", :src=>"http://cachedcommons.org/cache/html5-enabled/1.0.0/javascripts/html5-enabled-min.js"}
      
  %body
    %header.siteheader
      %hgroup
        %h1
          = link_to(@site.title, (path_for :home))
        %h2= @site.subtitle

    %section.container
      %section.wrapper
        %section.main
          = yield
        %section.sidebar
          %nav
            %ul
              %li= link_to("About", path_for(:about))
              %li= link_to("Archive", path_for(:archive))
              %li= link_to("Atom", path_for(:atom))
              -if logged_in?
                %li= link_to("New Post", path_for(:new))
                %li= link_to("Sign Out", path_for(:logout))

        :textile 
          h3. About Me

          Regular sidebar type of content and other related stuff can go here. 

                
      %footer
        %p Please contact me at <a href="http://twitter.com/scott">@ScottW</a> or <a href="mailto:scottwater+blog@gmail.com">ScottWater@gmail.com</a>
        %p &copy; Scott Watermasysk &#8212; 2006-2010        
        %p Powered by #{link_to('Sinatra', 'http://www.sinatrarb.com')} and hosted by #{link_to('Heroku', 'http://heroku.com')}
            
    %script{:type => "text/javascript", :src=>"/js/code.js"}