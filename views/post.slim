== set_title @post.title
article
  header
    h1
      == smart_title(@post)
      - if logged_in?
        =="(#{n @post.views} Views #{link_to("Edit", path_for(:edit, :slug => @post.slug), :class => 'nopjax')})"
  section.content
    == @post.body
  footer.post
    ' Published by <a ref="author" href="/about">Scott Watermasysk</a>
    time datetime=@post.created_at.iso8601 pubdate=true
      == kronic(@post.created_at)
